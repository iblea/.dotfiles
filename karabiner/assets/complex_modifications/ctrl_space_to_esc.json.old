{
  "title": "ctrl space to esc_old",
  "rules": [
    {
      "description": "ctrl space to esc en_US_old",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            },
            "key_code": "spacebar"
          },
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.US",
                "language": "en"
              }
            },
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
