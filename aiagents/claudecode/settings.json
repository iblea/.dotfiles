{
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/statusline-command.sh"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(date:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ssh:*)",
      "Bash(chmod:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(gitdiff:*)",
      "Bash(gitshow:*)",
      "Bash(code:*)",
      "Bash(codenvim:*)",
      "Bash(nohup codenvim:*)",
      "Bash(nohup code:*)",
      "Bash(gemini:*)",
      "Glob",
      "Grep",
      "Read",
      "Task",
      "TodoWrite",
      "WebSearch",
      "WebFetch",
      "AskUserQuestion",
      "mcp__sequential-thinking__sequentialthinking",
      "Edit(//tmp/translate_byai.md)",
      "Write(//tmp/translate_byai.md)"
    ],
    "deny": [],
    "ask": []
  },
  "model": "opus",
  "autoCompactEnabled": false,
  "enableAllProjectMcpServers": true,
  "bypassPermissionsModeAccepted": true,
  "verbose": true,
  "enabledMcpjsonServers": [
    "server-sequential-thinking"
  ],
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": false,
    "code-review@claude-plugins-official": true,
    "playwright@claude-plugins-official": false,
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true,
    "clarify@team-attention-plugins": true
  },
  "language": "한국어",
  "alwaysThinkingEnabled": true,
  "autoCompactEnabled": false,
  "bypassPermissionsModeAccepted": true,
  "verbose": true,
  "env": {
    "MAX_THINKING_TOKENS": "63999"
  },
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "YOUR_API_KEY"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "sequential-thinking-improved": {
      "command": "node",
      "args": [
	    "$(npm root -g)/@modelcontextprotocol/server-sequential-thinking/dist/sequential-thinking-improved.js"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--executable-path=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer YOUR_API_KEY"
      }
    },
    "gitlab": {
      "command": "npx",
      "args": [
        "-y",
        "@zereight/mcp-gitlab"
      ],
      "env": {
        "GITLAB_PERSONAL_ACCESS_TOKEN": "YOUR_PERSONAL_KEY",
        "GITLAB_API_URL": "https://YOUR_CUSTOM_DOMAIN/api/v4/",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      }
    },
    "automation": {
      "command": "bun",
      "args": [
        "run",
        "/Users/iblea/src/opensource/automation-mcp/index.ts",
        "--stdio"
      ]
    }
  },
  "disabledMcpServers": [
    "automation",
    "github",
    "gitlab",
    "playwright"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-done.sh"
          }
        ]
      }
    ]
  }
}
