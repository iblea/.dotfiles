#!/bin/bash

MODEL_SELECT=""
if [ $# -eq 0 ]; then
    MODEL_SELECT="s"
elif [ $# -eq 1 ]; then
    if [ "$1" = "s" ] || [ "$1" = "o" ]; then
        MODEL_SELECT="$1"
        shift
    fi
else
    MODEL_SELECT="$1"
    shift
fi

if [ "$MODEL_SELECT" = "s" ]; then
    opencode --model "anthropic/claude-sonnet-4-0"
elif [ "$MODEL_SELECT" = "s" ]; then
    opencode --model "anthropic/claude-opus-4-1"
else
    opencode --model "anthropic/claude-sonnet-4-0"
fi

