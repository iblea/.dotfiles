{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ssh:*)",
      "Bash(chmod:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Glob",
      "Grep",
      "Read",
      "Task",
      "TodoWrite",
      "WebSearch",
      "WebFetch",
      "mcp__sequential-thinking__sequentialthinking"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "plan"
  },
  "verbose": true,
  "model": "sonnet",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "server-sequential-thinking"
  ],
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/statusline-command.sh"
  },
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "YOUR_API_KEY"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer YOUR_API_KEY"
      }
    }
  }
}
